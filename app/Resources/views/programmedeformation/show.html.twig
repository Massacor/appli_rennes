{% extends 'base.html.twig' %}
{% block body %}
    <h1>Programme de formation</h1>

    <table>
        <tbody>
            <tr>
                <th>Intitule</th>
                <td>{{ programmedeformation.intitule }}</td>
            </tr>
            <tr>
                <th>Objectif</th>
                <td>{{ programmedeformation.objectif }}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ programmedeformation.id }}</td>
            </tr>
            <tr>
                <th>Detailed View</th>
                <td> <a href="{{ path('programme_detail', { 'progid': programmedeformation.id }) }}">Link</a </td>
            </tr>
        </tbody>
    </table>


    <h2> Liste des modules</h2>
    <ul>
        {% for module in modules %}
            <li>
                <a href='{{ path('module_show', {'progid' : programmedeformation.id, 'modid': module.id  }) }} '>
                    {{module.code}} : {{module.intitule}}
                </a>
            </li>
        {% endfor %}
            <li>
                <a href="{{ path('module_new', {'progid' : programmedeformation.id}) }}">
                   Ajouter un module
                </a>
            </li>
    </ul>


    <ul>
        {# <li>
            <a href="{{ path('programme_index') }}">Back to the list</a>
        </li> #}
        <li>
            <a href="{{ path('programme_edit', { 'progid': programmedeformation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
