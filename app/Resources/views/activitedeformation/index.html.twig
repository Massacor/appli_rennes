{% extends 'base.html.twig' %}

{% block body %}
    <h1>Liste de activités de formation</h1>

    <table>
        <thead>
            <tr>
                <th>Séquence</th>
                <th>Intitule</th>
                <th>Code</th>
                <th>Description</th>
                <th>Objectif du formateur</th>
                <th>Objectif de l'apprenant</th>
                <th>Temps</th>
                <th>Demarche</th>
                <th>Evaluation</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for activitedeformation in activitedeformations %}
            <tr>
                <td><a href="{{ path('activite_show', { 'actid': activitedeformation.id , 'seqid':sequence.id, 'modid':module.id, 'progid':program.id}) }}">{{ activitedeformation.sequenceid }}</a></td>
                <td>{{ activitedeformation.intitule }}</td>
                <td>{{ activitedeformation.code }}</td>
                <td>{{ activitedeformation.description }}</td>
                <td>{{ activitedeformation.objectifformateur }}</td>
                <td>{{ activitedeformation.objectifapprenant }}</td>
                <td>{{ activitedeformation.temps }} h</td>
                <td>{% if activitedeformation.demarche %}Inductive{% else %}Déductive{% endif %}</td>
                <td>{{ activitedeformation.evaluation }}</td>
                <td>{{ activitedeformation.id }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('activite_show', { 'actid': activitedeformation.id , 'seqid':sequence.id, 'modid':module.id, 'progid':program.id}) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('activite_edit', { 'actid': activitedeformation.id , 'seqid':sequence.id, 'modid':module.id, 'progid':program.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('activite_new', {'seqid':sequence.id, 'modid':module.id, 'progid':program.id }) }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
